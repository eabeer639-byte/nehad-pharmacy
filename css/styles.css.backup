/* Shop page layout */
.shop-page{padding:48px 0}
.shop-header{margin-bottom:32px}
.shop-header h1{font-family:'Tajawal',serif;font-size:36px;margin:0 0 8px;color:var(--text)}
.shop-header .sub{color:var(--muted);margin:0;font-size:15px}

/* Search Section - Full Width at Top */
.search-section{display:grid;grid-template-columns:1fr auto;gap:12px;margin-bottom:36px;align-items:center}
.search-input{padding:14px 16px;border:1px solid rgba(31,27,24,0.08);border-radius:12px;background:transparent;font-size:15px}
.sort-select{padding:14px 16px;border:1px solid rgba(31,27,24,0.08);border-radius:12px;background:transparent;font-size:15px;font-weight:600;color:var(--text);cursor:pointer}
.search-input::placeholder{color:var(--muted)}
.search-input:focus-visible,.sort-select:focus-visible{border-color:rgba(31,27,24,0.12);outline:none;box-shadow:0 0 0 4px rgba(200,185,166,0.12)}

/* Two Column Layout */
.shop-layout{display:grid;grid-template-columns:280px 1fr;gap:36px;align-items:start;width:100%}

/* Left Sidebar: Filters */
.shop-filters{background:white;border:1px solid rgba(31,27,24,0.04);border-radius:14px;padding:24px;position:sticky;top:80px;height:fit-content;box-shadow:0 2px 8px rgba(0,0,0,0.02)}
.filters-header{display:flex;align-items:center;justify-content:space-between;margin-bottom:24px}
.filters-header h3{margin:0;font-size:18px;font-weight:600;color:var(--text)}
