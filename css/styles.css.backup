.filter-group{margin-bottom:0}
.filter-group h4{font-size:15px;font-weight:600;color:var(--text);margin:0 0 14px;padding-bottom:12px;border-bottom:1px solid rgba(31,27,24,0.06)}

.category-filter{display:flex;flex-direction:column;gap:8px;align-items:flex-start}
.category-btn{display:block;width:100%;text-align:right;background:transparent;border:1px solid rgba(31,27,24,0.08);padding:12px 14px;border-radius:8px;font-weight:500;color:var(--text);cursor:pointer;font-size:14px;transition:all .22s ease;white-space:nowrap}
.category-btn:hover{border-color:rgba(31,27,24,0.16);background:rgba(31,27,24,0.02);transform:translateX(4px)}
.category-btn.active{background:var(--accent);color:var(--white);border-color:var(--accent);box-shadow:0 4px 12px rgba(238,114,19,0.2);transform:none}

/* Category Dropdown Select (Mobile) */
.category-select{width:100%;padding:12px 14px;border:1px solid rgba(31,27,24,0.08);border-radius:8px;background:transparent;font-weight:500;color:var(--text);cursor:pointer;font-size:14px;transition:all .22s ease;font-family:inherit;text-align:right}
.category-select:focus-visible{border-color:rgba(31,27,24,0.16);outline:none;box-shadow:0 0 0 4px rgba(200,185,166,0.12)}

/* Right Content: Products */
.shop-content{display:flex;flex-direction:column;gap:0;width:100%;min-width:0}

.empty-state{padding:40px 20px;text-align:center;color:var(--muted)}

/* Pagination */
.pagination{display:flex;align-items:center;justify-content:center;gap:8px;margin:48px 0 0;flex-wrap:wrap}
.pagination .page-btn{background:var(--white);border:1px solid rgba(31,27,24,0.12);padding:10px 14px;border-radius:8px;cursor:pointer;font-weight:500;font-size:14px;color:var(--text);transition:all .2s ease;min-width:40px;text-align:center;line-height:1}
.pagination .page-btn:hover{border-color:rgba(31,27,24,0.2);background:rgba(31,27,24,0.02);transform:translateY(-2px);box-shadow:0 2px 6px rgba(31,27,24,0.04)}
