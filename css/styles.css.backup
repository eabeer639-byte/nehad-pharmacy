.price-section {
  display: flex;
  align-items: center;
  gap: 8px;
  margin: 4px 0;
}


.price-original {
    text-decoration: line-through;
    color: #606060;
    font-size: 16px;
}


.price-current {
  font-weight: 700;
  color: #ff7a00;
  font-size: 20px;
}

/* ===== Actions ===== */
.card-actions {
  margin-top: auto;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.action-top {
  display: flex;
  align-items: center;
  gap: 8px;
}

.action-top .price-section {
  flex: 1;
  margin: 0;
}

/* Quantity control */
.qty-control {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12px;
  padding: 0;
  flex-shrink: 0;
}

.qty-btn {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 1.5px solid #ff7a00;
  background: transparent;
  color: #ff7a00;
  cursor: pointer;
  font-size: 16px;
  line-height: 1;
  transition: 0.2s;
  flex-shrink: 0;
}

.qty-btn:hover {
  background: #ff7a00;
  color: #fff;
}

.qty-value {
  min-width: 24px;
  text-align: center;
  font-weight: 600;
  font-size: 13px;
}

/* Buttons row */
.action-buttons {
  display: flex;
  gap: 8px;
  width: 100%;
}

/* Cart button (filled orange) */
.btn-cart {
    background: #fffefe;
    color: #fff;
    border: solid 2px orange;
    padding: 10px 12px;
    border-radius: 10px;
    cursor: pointer;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: 0.2s;
    box-shadow: 0px 0px 10px #00000024;
}

.btn-cart:hover {
  background: #e86f00;
}

/* Outline button */
.btn-outline {
  flex: 1;
  text-align: center;
  border: 1.5px solid #ff7a00;
  color: #ff7a00;
  padding: 10px 8px;
  border-radius: 10px;
  text-decoration: none;
  font-size: 13px;
  font-weight: 500;
  transition: 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-outline:hover {
  background: #ff7a00;
  color: #fff;
}

/* ===== Responsive ===== */
@media (max-width: 768px) {
  .product-image img {
    height: 150px;
  }

  .price-current {
    font-size: 17px;
  }
}

.category-card.clean {
  background: #ffffff;
  border-radius: 20px;
  padding: 28px 22px;
  text-align: center;
  border: 1px solid #f0f0f0;
  transition: 0.35s ease;
  cursor: pointer;
}

/* Hover */
.category-card.clean:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0,0,0,0.06);
}

/* Icon */
.category-card.clean .icon {
  width: 48px;
  height: 48px;
  margin: 0 auto 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-card.clean .icon img {
  width: 32px;
  height: 32px;
  opacity: 0.9;
}

/* Title */
.category-card.clean h3 {
  font-size: 17px;
  font-weight: 600;
  color: #111;
  margin-bottom: 6px;
}

/* Description */
.category-card.clean p {
  font-size: 13px;
  color: #888;
  line-height: 1.6;
  margin-bottom: 18px;
}

/* Link */
.category-card.clean .link {
  font-size: 14px;
  font-weight: 500;
  color: #ff7a00;
  position: relative;
}

.category-card.clean .link::after {
  content: "";
  width: 0;
  height: 1.5px;
  background: #ff7a00;
  position: absolute;
  bottom: -4px;
  left: 0;
  transition: 0.3s ease;
}

.category-card.clean:hover .link::after {
  width: 100%;
}

















.category-image-card {
  position: relative;
  height: 280px;
  background-size: cover;
  background-position: center;
  text-decoration: none;
  overflow: hidden;
  cursor: pointer;
}

.category-image-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.45);
  opacity: 0;
  transition: 0.3s ease;
}

.explore-text {
  position: absolute;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%) translateY(10px);
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  opacity: 0;
  transition: 0.3s ease;
  z-index: 2;
}

.category-image-card:hover::before {
  opacity: 1;
}

.category-image-card:hover .explore-text {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

